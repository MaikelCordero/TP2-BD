@model EmpleadoModel
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded" style="width: 100%;">
    <div class="card-header bg-primary text-white text-center">
        <h4 class="mb-0">Editar Empleado</h4>
    </div>
    <div class="card-body">
        <form asp-action="Eliminar" asp-controller="Mantenedor" method="post">

            <input asp-for="Id" type="hidden" class="form-control" placeholder="Ingrese su identidad">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el empleado : @Html.DisplayTextFor(m => m.Nombre)?
            </div>
            
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-save"><i class="bi bi-exclamation-triangle-fill"></i> Eliminar
                </button>
                <a asp-action="listar" asp-controller="Mantenedor" class="btn btn-warning">
                    <i class="fas fa-arrow-left"><i class="bi bi-list-columns-reverse"></i></i> Volver a la lista
                </a>
            </div>
        </form>
    </div>
</div>

