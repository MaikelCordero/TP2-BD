@model EmpleadoModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded" style="width: 100%;">
    <div class="card-header bg-primary text-white text-center">
        <h4 class="mb-0">Editar Empleado</h4>
    </div>
    <div class="card-body">
        <form asp-action="Editar" asp-controller="Mantenedor" method="post">

            <input asp-for="Id" type="hidden" class="form-control" placeholder="Ingrese su identidad">

            <div class="mb-3">
                <label asp-for="IDENTIDAD" class="form-label fw-bold">Identidad</label>
                <input asp-for="IDENTIDAD" type="text" class="form-control" placeholder="Ingrese su identidad">
                <span asp-validation-for="IDENTIDAD" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                <input asp-for="Nombre" type="text" class="form-control" placeholder="Ingrese el nombre del empleado">
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="IdPuesto" class="form-label fw-bold">ID del puesto</label>
                <select asp-for="IdPuesto" class="form-control">
                    <option value="">Seleccione un puesto</option>
                    <option value="1">Gerente</option>
                    <option value="2">Asistente</option>
                    <option value="3">Desarrollador</option>
                </select>
                <span asp-validation-for="IdPuesto" class="text-danger"></span>
            </div>
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save"><i class="bi bi-check2-circle"></i></i> Editar empleado
                </button>
                <a asp-action="listar" asp-controller="Mantenedor" class="btn btn-warning">
                    <i class="fas fa-arrow-left"><i class="bi bi-list-columns-reverse"></i></i> Volver a la lista
                </a>
            </div>
        </form>
    </div>
</div>


